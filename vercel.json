{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "public",
  "rewrites": [
    {
      "source": "/support",
      "destination": "/support-documentation.html"
    },
    {
      "source": "/faq",
      "destination": "/faq.md"
    },
    {
      "source": "/guide",
      "destination": "/user-guide.md"
    },
    {
      "source": "/privacy",
      "destination": "/privacy-policy.html"
    }
  ],
  "headers": [
    {
      "source": "/public/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_NAME": "Traffic Booster Pro",
    "NEXT_PUBLIC_SITE_URL": "https://trafficboosterpro.uk"
  }
}
